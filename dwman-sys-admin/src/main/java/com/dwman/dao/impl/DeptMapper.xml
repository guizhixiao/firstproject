<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dwman.dao.DeptMapper">
  <update id="update" parameterType="java.util.Map" >
    UPDATE sys_dept
      <include refid="UPDATE_SQL"/>
    WHERE id=#{id}
  </update>

    <insert id="insert" parameterType="java.util.Map">
        INSERT  INTO
        sys_dept
        (
id,
dept_no,
dept_name,
range_rank,
use_flag,
create_user,
create_time,
remark

        )
        VALUES
        (
#{id},
#{deptNo},
#{deptName},
#{rangeRank},
#{useFlag},
#{createUser},
#{createTime},
#{remark}

        )
    </insert>
  <delete id="deleteById" parameterType="java.lang.Long">
    DELETE  FROM sys_dept
    WHERE ID=#{id}
  </delete>

  <select id="findById" parameterType="java.lang.Long" resultType="java.util.Map">
    SELECT * FROM sys_dept
    WHERE ID=#{id}
  </select>

  <select id="findAllByParam" parameterType="java.util.Map" resultType="java.util.Map">
    SELECT
    <include refid="COLUMN_SQL"/>
    FROM sys_dept
    WHERE 1 =1
    <include refid="WHERE_SQL"/>
  </select>

  <select id="findCount" parameterType="java.util.Map" resultType="java.lang.Long">
    select COUNT(1) from sys_dept
    WHERE  1=1
    <include refid="WHERE_SQL"/>
  </select>

  <select id="findAllByPageParam" parameterType="java.util.Map" resultType="java.util.Map">
    SELECT
    <include refid="COLUMN_SQL"/>
    FROM sys_dept
    WHERE 1=1
    <include refid="WHERE_SQL"/>
  </select>

  <select id="findCountByPageParam" parameterType="java.util.Map" resultType="java.lang.Long">
    SELECT COUNT(1) size
    FROM sys_dept
    WHERE 1=1
    <include refid="WHERE_SQL"/>
  </select>

  <sql id="COLUMN_SQL">
id as id,
dept_no as deptNo,
dept_name as deptName,
range_rank as rangeRank,
use_flag as useFlag,
create_user as createUser,
create_time as createTime,
remark as remark,

  </sql>

  <sql id="WHERE_SQL">
<if test="id != null">  AND id = #{id}  </if>
<if test="deptNo != null">  AND dept_no = #{deptNo}  </if>
<if test="deptName != null">  AND dept_name = #{deptName}  </if>
<if test="rangeRank != null">  AND range_rank = #{rangeRank}  </if>
<if test="useFlag != null">  AND use_flag = #{useFlag}  </if>
<if test="createUser != null">  AND create_user = #{createUser}  </if>
<if test="createTime != null">  AND create_time = #{createTime}  </if>
<if test="remark != null">  AND remark = #{remark}  </if>

  </sql>

  <sql id="UPDATE_SQL">
      <set>
<if test="id!=null">   id=#{id},  </if>
<if test="deptNo!=null">   dept_no=#{deptNo},  </if>
<if test="deptName!=null">   dept_name=#{deptName},  </if>
<if test="rangeRank!=null">   range_rank=#{rangeRank},  </if>
<if test="useFlag!=null">   use_flag=#{useFlag},  </if>
<if test="createUser!=null">   create_user=#{createUser},  </if>
<if test="createTime!=null">   create_time=#{createTime},  </if>
<if test="remark!=null">   remark=#{remark},  </if>

      </set>
  </sql>
</mapper>
